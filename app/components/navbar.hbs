      <AuIcon @icon='logout' @alignment='left' />Afmelden
    </AuButton>
  </AuDropdown>
  {{! <div class='diagonal-box'>
    <LinkTo @route='index.dashboard' style='text-decoration:none;'>
      <p class='au-u-h5' style='font-weight: 500; color:black;'>
        BEKIJK DE KAART
      </p>
    </LinkTo>
